class Solution:
    def countTriplet(self, arr):
        # code here 
        n = len(arr)
        s = set(arr)         # for O(1) lookup
        triplets = set()     # to avoid duplicates
        
        for i in range(n):
            for j in range(i+1, n):
                a, b = arr[i], arr[j]
                c = a + b
                if c in s:
                    triplets.add(tuple(sorted((a, b)) + [c]))
        
        return len(triplets)