class Solution:
    def rotate(self, arr):
        n = len(arr)
        if n <= 1:
            return arr  # No change if array has 0 or 1 element
        
        last = arr[-1]   # Store last element
        # Shift elements to the right
        for i in range(n - 1, 0, -1):
            arr[i] = arr[i - 1]
        arr[0] = last   # Place last at the front
        return arr